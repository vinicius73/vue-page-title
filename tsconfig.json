{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "doc/**/*.ts",
    "doc/**/*.d.ts",
    "doc/**/*.tsx",
    "doc/**/*.vue",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
